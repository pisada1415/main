<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_curr_session_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp" >

    <RelativeLayout
        android:id="@+id/curr_card_session_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/current_session_name_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="cazzo"
            android:textSize="20sp" 
                android:textColor="@color/material_green_400"/>

        <TextView
            android:id="@+id/current_session_start_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/current_session_name_text"
            android:gravity="center"
            android:text="cazzo"
            android:textSize="20sp"
                android:textColor="@color/material_green_400" />

        <ImageView
            android:id="@+id/current_session_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/current_session_start_text"
            android:gravity="center"
                android:textColor="@color/material_green_400" />

        <Button
            android:id="@+id/details_current_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/current_session_icon"
            android:layout_centerHorizontal="true"
            android:onClick="currentSessionDetails"
            android:text="Dettaglio Session"
            android:textSize="20sp" 
                android:textColor="@color/material_green_400"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>