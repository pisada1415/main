<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_curr_session_card"
    android:layout_width="match_parent"
    android:layout_height="1400px"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/current_session_name_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:text="cazzo"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/current_session_start_text"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/current_session_name_text"
            android:gravity="center"
            android:text="cazzo"
            android:textSize="20sp" />

     
          <Button
            android:id="@+id/details_current_button"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/current_session_start_text"
            android:gravity="center"
            android:onClick="currentSessionDetails"
            android:text="Dettaglio Session"
            android:textSize="20sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>