<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_sessiondetails_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp" 
    card_view:cardBackgroundColor="#FFFFFF"
    
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp" >

        <ImageView
            android:id="@+id/thumbnailSessionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="30dp"
            android:src="@drawable/ic_launcher" />

        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:text="00:00"
            android:layout_alignLeft="@id/info"
            android:layout_alignStart="@id/info"
            android:textColor="@color/lightBlue" />

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnailSessionDetails"
            android:layout_toRightOf="@+id/thumbnailSessionDetails"
            android:text="@string/info"
            android:textColor="@color/lightBlue"
            android:textSize="20sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>