	<RelativeLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:tools="http://schemas.android.com/tools"
    	android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	
	    <LinearLayout
	        android:id="@+id/linear"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	    
	    	<ImageView
	    	    android:id="@+id/image"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:background="#FF00FF"
		        android:layout_marginTop="25dp"
		        android:layout_marginLeft="5dp"
		        android:contentDescription="@string/img" />
	    
		    <TextView
		        android:id="@+id/nome_sessione"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="5dp"
		        android:textSize="20sp"
		        android:layout_gravity="center"
		        android:text="@string/nome_sessione" />
		    
		    <EditText
		        android:id="@+id/edit"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginLeft="5dp"
		        android:textSize="20sp"
		        android:layout_gravity="center"
		        android:hint="@string/nome_sessione"
		        android:visibility="gone" />
	    
	    </LinearLayout>"
	    
	    <TextView
	        android:id="@+id/inizio_sessione"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="25dp"
	        android:layout_marginLeft="5dp"
	        android:layout_below="@+id/linear"
	        android:text="@string/inizio_sessione" />
	    
	    <TextView
	        android:id="@+id/durata"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="5dp"
	        android:layout_below="@+id/inizio_sessione"
	        android:text="@string/durata" />
	    
	    <ListView
	        android:id="@+id/lista"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="5dp"
	        android:layout_below="@+id/durata" />
	
	</RelativeLayout>
