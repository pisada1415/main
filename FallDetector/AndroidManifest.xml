<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pisada.fallDetector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
        
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SessionsListActivity"

            android:label="@string/title_activity_sessions_list" 
            
           
           android:windowSoftInputMode="stateHidden|adjustResize" >
            
        </activity>
        <activity
            android:name=".SessionDetailsActivity"
            android:label="@string/title_activity_session" >
        </activity>
        <activity
            android:name=".CurrentSessionActivity"
            android:label="@string/title_activity_current_session" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FallDetailsActivity"
            android:label="@string/title_activity_fall_details" >
             
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        
        <service android:name=".ForegroundService" />
        
    </application>

</manifest>
