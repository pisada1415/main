<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pisada.fallDetector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".SessionsListActivity"
            android:label="@string/title_activity_sessions_list" >
            
           
        </activity>
        <activity
            android:name=".SessionDetailsActivity"
            android:label="@string/title_activity_session" >
        </activity>
        <activity
            android:name=".CurrentSessionActivity"
            android:label="@string/title_activity_current_session" >
        </activity>
        <activity
            android:name=".FallDetailsActivity"
            android:label="@string/title_activity_fall_details" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        
        <service android:name=".ForegroundService" />
    </application>

</manifest>